SYSROOT=$(shell pwd)/sysroot

# flags
QEMUFLAGS=-no-reboot -D /tmp/qemu.log -d cpu_reset,guest_errors,int,in_asm -vga std
LDFLAGS=-Wl,-Map=kernel.map
CFLAGS=-ffreestanding -Wall -Wextra -Wno-unused-variable -Wno-unused-function -g -O3 -Iinclude -Wshadow

# Subsystems
ARCHDIR=arch/i386
DRIVERDIR=drivers
DIR_SCHED=sched
DIR_SYNC=sync
DIR_MM=mm
DIR_FS=fs
DIR_LIB=lib

# sysroot related directories
BOOTDIR=/boot/
INCLUDEDIR=/usr/include
LIBDIR=/usr/lib

AR=i686-elf-ar
AS=i686-elf-as
CC=i686-elf-gcc -isystem=$(INCLUDEDIR)
