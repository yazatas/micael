SYSROOT=$(shell pwd)/sysroot

# flags
QEMUFLAGS=-no-reboot -D /tmp/qemu.log -d cpu_reset,guest_errors,int,in_asm
LDFLAGS=-Wl,-Map=kernel.map
CFLAGS=-ffreestanding -Wall -Wextra -Wno-unused-variable -Wno-unused-function -g -O0 -Iinclude

# directories
ARCHDIR=arch/i386
DRIVERDIR=drivers
ALGODIR=algorithm
BOOTDIR=/boot/
INCLUDEDIR=/usr/include
LIBDIR=/usr/lib

AR=i686-elf-ar
AS=i686-elf-as
CC=i686-elf-gcc -isystem=$(INCLUDEDIR)
